<!-- Solr 5.3.0 data schema - Lastmodified: 30/09/2015 -->
<schema name="SKBP" version="2.0">

  <!-- ==================================================================== -->
  <!-- Single fields                                                        -->
  <!-- ==================================================================== -->
         
  <!-- Unique ID -->
  <field name="id" type="string" indexed="true" stored="true" required="true" multiValued="false"/>           <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW, ROE, KB -->

  <!-- Common fields -->
  <field name="source" type="string" indexed="true" stored="true" multiValued="false"/>                       <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW, ROE, KB -->
  <field name="partnername" type="string" indexed="true" stored="true" multiValued="false"/>                  <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA               -->
  <field name="url" type="string" indexed="true" stored="true" multiValued="false"/>                          <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="sourceurl" type="string" indexed="true" stored="true" multiValued="false"/>                    <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="modified" type="date" indexed="true" stored="true" multiValued="false"/>                       <!-- CSIC, ISRIC,        WOCAT, TECA, CBW, ROE     -->
  <field name="published" type="date" indexed="true" stored="true" multiValued="false"/>                      <!-- CSIC, ISRIC,        WOCAT, TECA, CBW          -->
  <field name="keywords" type="string" indexed="true" stored="true" multiValued="true"/>                      <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="langname" type="string" indexed="true" stored="true" multiValued="false"/>                     <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW, ROE, KB -->
  <field name="language" type="string" indexed="true" stored="true" multiValued="false"/>                     <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW, ROE, KB -->
  <field name="languages" type="string" indexed="true" stored="true" multiValued="true"/>                     <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW, ROE, KB -->
  <field name="size" type="int" indexed="true" stored="true" multiValued="false"/>                            <!-- CSIC,                            CBW          -->
  <field name="contenttype" type="string" indexed="true" stored="true" multiValued="false"/>                  <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          --> 
  <field name="typology" type="string" indexed="true" stored="true" multiValued="false"/>                     <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          --> 
  <field name="datatype" type="string" indexed="true" stored="true" multiValued="false"/>                     <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          --> 
  <field name="charset" type="string" indexed="true" stored="true" multiValued="false"/>                      <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          --> 
  <field name="format" type="string" indexed="true" stored="true" multiValued="false"/>                       <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          --> 
  <field name="authors" type="text_en" indexed="true" stored="true" multiValued="true"/>                      <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="authors_nav" type="string" indexed="true" stored="true" multiValued="true"/>                   <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="regions" type="text_en" indexed="true" stored="true" multiValued="true"/>                      <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="regions_nav" type="string" indexed="true" stored="true" multiValued="true"/>                   <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="annexes" type="text_en" indexed="true" stored="true" multiValued="true"/>                      <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="annexes_nav" type="string" indexed="true" stored="true" multiValued="true"/>                   <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="nonannexes" type="text_en" indexed="true" stored="true" multiValued="true"/>                   <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="nonannexes_nav" type="string" indexed="true" stored="true" multiValued="true"/>                <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="landmanagement" type="text_en" indexed="true" stored="true" multiValued="true"/>               <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="landmanagement_nav" type="string" indexed="true" stored="true" multiValued="true"/>            <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="climatezones" type="text_en" indexed="true" stored="true" multiValued="true"/>                 <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="climatezones_nav" type="string" indexed="true" stored="true" multiValued="true"/>              <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="yearpublished" type="int" indexed="true" stored="true" multiValued="false"/>                   <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="yearmodified" type="int" indexed="true" stored="true" multiValued="false"/>                    <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW,      KB -->
  <!-- Store values in multiple languages to search without specifying language -->
  <field name="title" type="text_general" indexed="true" stored="false" multiValued="true"/>                  <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA, CBW          -->
  <field name="description" type="text_general" indexed="true" stored="false" multiValued="true"/>            <!-- CSIC,        AGRIS, WOCAT, TECA               -->
  <field name="abstract" type="text_general" indexed="true" stored="false" multiValued="true"/>               <!-- CSIC, ISRIC, AGRIS, WOCAT, TECA,              -->
  <field name="body" type="text_general" indexed="true" stored="false" multiValued="true"/>                   <!--                     WOCAT, TECA, CBW          -->

  <!-- CBW HTML fields -->
  <field name="classifications" type="string" indexed="true" stored="true" multiValued="true"/>
  
  <!-- CSIC XML fields -->
  <field name="isbn" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="identifier" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="subjects" type="string" indexed="true" stored="true" multiValued="true"/>                      <!--        AGRIS        -->
  <field name="accessioneddate" type="date" indexed="true" stored="true" multiValued="false"/>
  <field name="relation" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="citation" type="text_en" indexed="true" stored="true" multiValued="false"/>                    <!--               WOCAT -->
  <field name="issueddate" type="string" indexed="true" stored="true" multiValued="false"/>                   <!--        AGRIS, WOCAT -->
  <field name="publishers" type="text_en" indexed="true" stored="true" multiValued="true"/>                   <!-- ISRIC,        WOCAT -->

  <!-- ISRIC XML fields -->
  <field name="contactname" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="contactorganisation" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="contactphone" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="contactemail" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="publication" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="citationcode" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="geolocation" type="location" indexed="true" stored="true" multiValued="false"/>                <!-- ROE, KB -->
  <field name="geolocationpoly" type="location_rpt" indexed="true" stored="true" multiValued="true"/>
  <field name="latlon" type="string" indexed="true" stored="true" multiValued="false"/>                       <!-- ROE, KB -->

  <!-- AGRIS XML fields -->
  <field name="docsource" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="extent" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="volume" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="issue" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="type" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="yearsubmitted" type="int" indexed="true" stored="true" multiValued="false"/>
  <field name="ispartof" type="text_en" indexed="true" stored="true" multiValued="false"/>

  <!-- TECA XML fields -->
  <field name="attachedfiles" type="string" indexed="true" stored="true" multiValued="true"/>
  <field name="furtherreading" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="images" type="string" indexed="false" stored="true" multiValued="true"/>
  <field name="countries" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="categories" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="categories_nav" type="string" indexed="true" stored="true" multiValued="true"/>

  <!-- WOCAT XML fields -->
  <field name="sponsorship" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="issn" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="doctype" type="string" indexed="true" stored="true" multiValued="false"/>

  <!-- ROE (Roster of Experts) CSV fields -->
  <field name="country" type="string" indexed="true" stored="true" multiValued="false"/>                      <!-- KB -->
  <field name="nationality" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="lastname" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="firstname" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="persontitle" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="sex" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="division" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="institution" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="institution_nav" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="city" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="telcountrycode" type="int" indexed="true" stored="true" multiValued="false"/>
  <field name="telcitycode" type="int" indexed="true" stored="true" multiValued="false"/>
  <field name="telnumber" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="website" type="string" indexed="true" stored="true" multiValued="false"/>                      <!-- KB -->
  <field name="expertemail" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="workexperience" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="disciplines" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="disciplines_nav" type="string" indexed="true" stored="true" multiValued="true"/>
  <field name="regionid" type="int" indexed="true" stored="true" multiValued="false"/>
  <field name="recarchived" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="specializations" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="specializations_nav" type="string" indexed="true" stored="true" multiValued="true"/>
  <field name="postcop" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="postcop_nav" type="string" indexed="true" stored="true" multiValued="true"/>
  <field name="thematicareas" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="thematicareas_nav" type="string" indexed="true" stored="true" multiValued="true"/>

  <!-- KB (Knowledge Base) CSV fields -->
  <field name="knowledgebase" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="kss" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="kssaddress" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="managingentity" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <field name="registrationreq" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="region" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="translation" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="managingentitytype" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="searchcapability" type="string" indexed="true" stored="true" multiValued="false"/>
  <field name="topics" type="text_en" indexed="true" stored="true" multiValued="true"/>
  <field name="topics_nav" type="string" indexed="true" stored="true" multiValued="true"/>
  <field name="infoformats" type="string" indexed="true" stored="true" multiValued="true"/>


  <!-- Internal Solr document version -->
  <field name="_version_" type="long" indexed="true" stored="true" multiValued="false"/>


  <!-- The following will create a "processingtime" field using a default value of
       "NOW" to indicate when each document was indexed. -->
  <field name="processingtime" type="date" indexed="true" stored="true" default="NOW" multiValued="false"/>


  <!-- Copy the fields for facets -->
  <copyField source="authors" dest="authors_nav"/>
  <copyField source="categories" dest="categories_nav"/>
  <copyField source="regions" dest="regions_nav"/>
  <copyField source="annexes" dest="annexes_nav"/>
  <copyField source="nonannexes" dest="nonannexes_nav"/>
  <copyField source="landmanagement" dest="landmanagement_nav"/>
  <copyField source="climatezones" dest="climatezones_nav"/>
  <copyField source="institution" dest="institution_nav"/>
  <copyField source="specializations" dest="specializations_nav"/>
  <copyField source="disciplines" dest="disciplines_nav"/>
  <copyField source="postcop" dest="postcop_nav"/>
  <copyField source="thematicareas" dest="thematicareas_nav"/>
  <copyField source="topics" dest="topics_nav"/>
  <!-- Copy the fields for multilanguage search -->
  <copyField source="title_*" dest="title"/>
  <copyField source="alttitle_*" dest="title"/>
  <copyField source="description_*" dest="description"/>
  <copyField source="abstract_*" dest="abstract"/>
  <copyField source="body_*" dest="body"/>


  <!-- ==================================================================== -->
  <!-- Dynamic fields                                                       -->
  <!-- ==================================================================== -->
  
  <!-- Dynamic fields for multiple languages               -->
  <!-- CSIC:  title,           description, abstract       -->
  <!-- ISRIC: title,                        abstract       -->
  <!-- AGRIS: title, alttitle, description, abstract       -->
  <!-- WOCAT: title,           description, abstract, body -->
  <!-- TECA:  title,           description, abstract, body -->
  <!-- CBW:   title,                                  body -->
  <dynamicField name="*_ar" type="text_ar" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_bg" type="text_bg" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_ca" type="text_ca" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_cz" type="text_cz" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_da" type="text_da" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_de" type="text_de" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_el" type="text_el" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_en" type="text_en" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_es" type="text_es" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_eu" type="text_eu" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_fa" type="text_fa" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_fi" type="text_fi" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_fr" type="text_fr" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_ga" type="text_ga" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_gl" type="text_gl" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_hi" type="text_hi" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_hu" type="text_hu" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_hy" type="text_hy" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_id" type="text_id" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_it" type="text_it" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_ja" type="text_ja" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_lv" type="text_lv" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_nl" type="text_nl" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_no" type="text_no" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_pt" type="text_pt" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_ro" type="text_ro" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_ru" type="text_ru" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_sv" type="text_sv" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_th" type="text_th" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_tr" type="text_tr" indexed="true" stored="true" multiValued="false"/>
  <dynamicField name="*_zh" type="text_zh" indexed="true" stored="true" multiValued="false"/>

  <!-- Store text in unsupported languages -->
  <dynamicField name="*_un" type="text_general" indexed="true" stored="true" multiValued="false"/>


  <!-- ==================================================================== -->
  <!-- Field to use to determine and enforce document uniqueness            -->
  <!-- ==================================================================== -->

  <uniqueKey>id</uniqueKey>


  <!-- ==================================================================== -->
  <!-- Field types                                                          -->
  <!-- ==================================================================== -->

  <!-- The StrField type is not analyzed, but indexed/stored verbatim.
     It supports doc values but in that case the field needs to be
     single-valued and either required or have a default value.
    -->
  <fieldType name="string" class="solr.StrField" sortMissingLast="true"/>


  <!-- boolean type: "true" or "false" -->
  <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>


  <!--
    Default numeric field types. For faster range queries, consider the tint/tfloat/tlong/tdouble types.
    These fields support doc values, but they require the field to be
    single-valued and either be required or have a default value.
  -->
  <fieldType name="int" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="float" class="solr.TrieFloatField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="double" class="solr.TrieDoubleField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="tdouble" class="solr.TrieDoubleField" precisionStep="8" positionIncrementGap="0"/>

  <!-- The format for this date field is of the form 1995-12-31T23:59:59Z -->
  <fieldType name="date" class="solr.TrieDateField" precisionStep="0" positionIncrementGap="0"/>


  <!-- A specialized field for geospatial search. If indexed, this fieldType must not be multivalued. -->
  <fieldType name="location" class="solr.LatLonType"  subFieldType="tdouble"/>
  <!-- Geospatial field to support multiValued and polygon shapes. -->
  <fieldType name="location_rpt" class="solr.SpatialRecursivePrefixTreeFieldType" geo="true" distErrPct="0.025" maxDistErr="0.001" units="degrees"/>


  <!-- A general text field that has reasonable, generic
       cross-language defaults: it tokenizes with StandardTokenizer,
       removes stop words from case-insensitive "stopwords.txt"
       (empty by default), and down cases.  At query time only, it
       also applies synonyms. -->
  <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt"/>
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" />
      <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
  </fieldType>
    

  <!-- Different languages types ordered by ISO code -->


  <!-- Arabic -->
  <fieldType name="text_ar" class="solr.TextField" positionIncrementGap="100">
    <analyzer> 
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <!-- for any non-arabic -->
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_ar.txt" />
      <!-- normalizes ﻯ to ﻱ, etc -->
      <filter class="solr.ArabicNormalizationFilterFactory"/>
      <filter class="solr.ArabicStemFilterFactory"/>
    </analyzer>
  </fieldType>

  <!-- Bulgarian -->
  <fieldType name="text_bg" class="solr.TextField" positionIncrementGap="100">
    <analyzer> 
      <tokenizer class="solr.StandardTokenizerFactory"/> 
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_bg.txt" /> 
      <filter class="solr.BulgarianStemFilterFactory"/>       
    </analyzer>
  </fieldType>

  <!-- Catalan -->
  <fieldType name="text_ca" class="solr.TextField" positionIncrementGap="100">
    <analyzer> 
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <!-- removes l', etc -->
      <filter class="solr.ElisionFilterFactory" ignoreCase="true" articles="lang/contractions_ca.txt"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_ca.txt" />
      <filter class="solr.SnowballPorterFilterFactory" language="Catalan"/>       
    </analyzer>
  </fieldType>

  <!-- CJK bigram (see text_ja for a Japanese configuration using morphological analysis) -->
  <fieldType name="text_cjk" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <!-- normalize width before bigram, as e.g. half-width dakuten combine  -->
      <filter class="solr.CJKWidthFilterFactory"/>
      <!-- for any non-CJK -->
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.CJKBigramFilterFactory"/>
    </analyzer>
  </fieldType>

  <!-- Kurdish -->
  <fieldType name="text_ckb" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.SoraniNormalizationFilterFactory"/>
      <!-- for any latin text -->
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_ckb.txt"/>
      <filter class="solr.SoraniStemFilterFactory"/>
    </analyzer>
  </fieldType>

  <!-- Czech -->
  <fieldType name="text_cz" class="solr.TextField" positionIncrementGap="100">
    <analyzer> 
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_cz.txt" />
      <filter class="solr.CzechStemFilterFactory"/>       
    </analyzer>
  </fieldType>

  <!-- Danish -->
  <fieldType name="text_da" class="solr.TextField" positionIncrementGap="100">
    <analyzer> 
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_da.txt" format="snowball" />
      <filter class="solr.SnowballPorterFilterFactory" language="Danish"/>       
    </analyzer>
  </fieldType>

  <!-- German -->
  <fieldType name="text_de" class="solr.TextField" positionIncrementGap="100">
    <analyzer> 
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_de.txt" format="snowball" />
      <filter class="solr.GermanNormalizationFilterFactory"/>
      <filter class="solr.GermanLightStemFilterFactory"/>
      <!-- less aggressive: <filter class="solr.GermanMinimalStemFilterFactory"/> -->
      <!-- more aggressive: <filter class="solr.SnowballPorterFilterFactory" language="German2"/> -->
